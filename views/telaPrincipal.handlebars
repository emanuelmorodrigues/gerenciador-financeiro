<header>
    <h1>Gerenciador Financeiro 1.0</h1>
</header>
<div class="menu-insercao">
    <form action="http://localhost:8081/add" method="POST">
        <label for="descricao">Descrição</label>
        <input type="text" id="descricao" name="descricao" placeholder="Descrição" autocomplete="off">
        <label for="valor">Valor</label>
        <input type="text" id="valor" name="valor" placeholder="Valor" autocomplete="off">
        <label for="data">Data</label>
        <input type="date" id="data" name="data" placeholder="Data">
        <div>
            <input type="radio" id="gastos" name="opcao-add" value="gastos">
            <label for="gastos">Gastos</label>
            <input type="radio" id="ganhos" name="opcao-add" value="ganhos">
            <label for="ganhos">Ganhos</label>
        </div>
        <button type="" id="add-gasto-ganho">Adicionar</button>
        <button type="">Buscar</button>
    </form>

</div>
<div class="container-gasto-ganho">
    
    
    <div class="gastos">
        {{#each dados}}
        <h3>Gastos</h3>
        <table>
            <tr><th>Descrição: {{#each this}}{{descricao}}{{/each}}</th><th>Valor: {{#each this}}{{valor}}{{/each}}</th><th>Data: {{#each this}}{{data}}{{/each}}</th></tr>
            </tr>
        </table>
        {{/each}}
        
    </div>

    <div class="ganhos">
        <h3>Ganhos</h3>
        <table>
            <tr><th>Descrição</th><th>Valor</th><th>Data</th></tr>
        </table>
    </div>

    <div class="resumo">
        <h3>Resumo</h3>
        <table>
            <tr><th>Total de Ganhos</th><th>Total de Gastos</th><th>Total Restante</th></tr><tr>
            <td>+R$30,00</td><td>-R$10,00</td><td>R$20,00</td></tr>
        </table>
    </div>
</div>